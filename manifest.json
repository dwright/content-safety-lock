{
  "manifest_version": 3,
  "name": "Content Safety Lock",
  "version": "1.0.0",
  "description": "Voluntary adult content blocker with self-lock mode for adults seeking structured guardrails",
  "browser_specific_settings": {
    "gecko": {
      "id": "contentsafetylock@example.com"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["utils.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Content Safety Lock"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
